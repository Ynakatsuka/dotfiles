#
# Executes commands at the start of an interactive session.
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

#
# Locale
#
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# Source modular zsh configuration files
_zsh_config_dir="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
if [[ -d "$_zsh_config_dir" ]]; then
  for _zsh_config_file in \
    "$_zsh_config_dir/prompt.zsh" \
    "$_zsh_config_dir/aliases.zsh" \
    "$_zsh_config_dir/git-worktree.zsh" \
    "$_zsh_config_dir/codex.zsh" \
    "$_zsh_config_dir/fzf.zsh" \
    "$_zsh_config_dir/copy-last-output.zsh" \
    "$_zsh_config_dir/claude.zsh" \
    "$_zsh_config_dir/tools.zsh"; do
    [[ -f "$_zsh_config_file" ]] && source "$_zsh_config_file"
  done
  unset _zsh_config_file
fi
unset _zsh_config_dir
